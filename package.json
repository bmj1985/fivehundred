{
  "name": "fivehundred",
  "version": "1.0.0",
  "description": "Card game 500 score keeping app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . --overwrite --plateform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=build/release/mac",
    "package-win": "electron-packager . --overwrite --asar=true --plateform=win32 --arch=ia32,x64 --icon=assets/icons/win/icon.ico --prune=true --out=build/release/win --version-string.CompanyName=ce --version-string.FileDescription=CE --version-string.ProductName=\"Five Hundred\"",
    "package-linux": "electron-packager . --overwrite --asar=true --plateform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=build/release/linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linusyoung/fivehundred.git"
  },
  "author": "Linus Yang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/linusyoung/fivehundred/issues"
  },
  "homepage": "https://github.com/linusyoung/fivehundred#readme",
  "dependencies": {
    "jquery": "^3.2.1"
  },
  "devDependencies": {
    "electron": "^1.7.10",
    "electron-package": "^0.1.0",
    "electron-packager": "^10.1.0"
  }
}
